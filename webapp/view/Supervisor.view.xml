<mvc:View
    controllerName="com.app.rfscreens.controller.Supervisor"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:suite="sap.suite.ui.commons"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press=".onSideNavButtonPress"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <Label
                    class="Heading"
                    text="RF SCREEN"
                />
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <ToolbarSpacer id="spacer">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData4"
                            priority="Low"
                            group="1"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <Button
                    icon="sap-icon://bell"
                    press="onNotificationPress"
                    type="Transparent"
                >
                    <customData>
                        <BadgeCustomData
                            id="idnotificationsbadge"
                            visible="true"
                        />
                    </customData>
                </Button>
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation
                expanded="true"
                selectedKey="{/selectedKey}"
                itemSelect=".onItemSelect"
            >
                <tnt:NavigationList
                    items="{path: '/navigation'}"
                    class="sidecontent"
                >
                    <tnt:NavigationListItem
                        text="{title}"
                        icon="{icon}"
                        enabled="{enabled}"
                        expanded="{expanded}"
                        items="{items}"
                        key="{key}"
                        class="sidecontent"
                    >
                        <tnt:NavigationListItem
                            text="{title}"
                            key="{key}"
                            enabled="{enabled}"
                            class="sidecontent"
                        />
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
                <tnt:fixedItem>
                    <tnt:NavigationList
                        items="{path: '/fixedNavigation'}"
                        class="sidecontent"
                    >
                        <tnt:NavigationListItem
                            text="{title}"
                            icon="{icon}"
                        />
                    </tnt:NavigationList>
                </tnt:fixedItem>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="pageSV1"
            >
                <pages>
                    <ScrollContainer
                        id="pageSV1"
                        horizontal="true"
                        vertical="true"
                        height="100%"
                        class="sapUiContent"
                    >
                        <!-- <ToolbarSpacer id="_IDGenToolbarSpacerArea" /> -->

                        <!-- <Button
                            id="idnewprocessArea"
                            text="NewProcessArea"
                            press="onPressCreateArea"
                            type="Success"
                        /> -->
                        <FlexBox
                            justifyContent="End"
                            class="sapUiSmallMarginTop"
                        >
                            <Button
                                id="idnewprocessArea"
                                text="NewProcessArea"
                                press="onPressCreateArea"
                                type="Success"
                            />
                        </FlexBox>

                        <VBox
                            id="idAssignslots"
                            class="sapUiSmallMargin boxContainer"
                        >
                            <Title
                                id="_IDHeadLabel"
                                text="Admin page"
                                class="sapUiSmallMarginTopHeading"
                            />
                            <FlexBox
                                id="_IDField1"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idempID"
                                    text="Employee ID:"
                                    labelFor="idEmppInput"
                                    required="true"
                                />
                                <Input
                                    id="idEmppInput"
                                    placeholder="Enter Employee ID"
                                    class="Inputs"
                                    liveChange="onEmployeeIdLiveChange"
                                />
                            </FlexBox>
                            <FlexBox
                                id="_IDField4"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idName"
                                    text="Name:"
                                    labelFor="idNameInput"
                                    required="true"
                                    
                                />
                                <Input
                                editable="true"
                                    id="idNameInput"
                                    placeholder="Enter Name"
                                    class="Inputs"
                                />
                            </FlexBox>
                            <FlexBox
                                id="_IDField3"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idEmail"
                                    text="Email:"
                                    labelFor="idEmailInput"
                                    
                                />
                                <Input
                                    editable="true"
                                    id="idEmailInput"
                                    placeholder="Enter Email"
                                    class="Inputs"
                                />
                            </FlexBox>
                            <FlexBox
                                id="_IDField36"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idPhone"
                                    text="Phone:"
                                    labelFor="idPhoneInput"
                                    required="true"
                                />
                                <Input
                                   editable="true"
                                    id="idPhoneInput"
                                    placeholder="Enter Phone"
                                    class="Inputs"
                                />
                            </FlexBox>
                            <FlexBox
                                id="_IDField345"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idLableRoesurcetype"
                                    text="Resource Type"
                                    required="true"
                                />
                                <ComboBox id="idRoesurcetypeInput" editable="true">
                                    <core:Item
                                        id="_IDGenItemPermanentEmployee"
                                        key="PermanentEmployee"
                                        text="Permanent Employee"
                                    />

                                    <core:Item
                                        id="_IDGenItemtemporaryemployee"
                                        key="temporaryemployee"
                                        text="temporary Employee"
                                    />
                                </ComboBox>

                                <!--  OUTBOUND  -->
                            </FlexBox>
                            <FlexBox
                                id="_IDField2"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idAreaLabel"
                                    text="Area:"
                                    labelFor="idAreaInput"
                                    required="true"
                                />
                                <MultiComboBox
                                    id="AreaSelect"
                                    items="{path: '/ProcessAreaSet'}"
                                    selectionChange="onCheckBoxSelect"
                                >
                                    <core:Item
                                        class="dropdown"
                                        id="_IDGenItem5"
                                        key="{Processarea}"
                                        text="{Processarea}"
                                    />
                                </MultiComboBox>
                            </FlexBox>
                            <FlexBox >
                            <Label id="idEmptyLabel" text=""></Label>
                            <Button id="idaddtilesbutton" press="onAddTilesBtnPress" ></Button> 
                            </FlexBox>
                            <FlexBox
                                id="_IDField33"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idGroup"
                                    text="Group:"
                                    labelFor="idGroupInput"
                                    required="true"
                                />
                                <MultiComboBox
                                    id="GroupSelect"
                                    items="{path: '/ProcessAreaSet'}"
                                    visible="false"
                                    selectionChange="onCheckBoxSelectGroup"
                                >
                                    <core:Item
                                        class="dropdown"
                                        id="_IDGenItem4"
                                        key="{Processgroup}"
                                        text="{Processgroup}"
                                    />
                                </MultiComboBox>
                            </FlexBox>
                            <FlexBox
                                id="_IDField34"
                                justifyContent="SpaceBetween"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Label
                                    id="idQueue"
                                    text="Queue:"
                                    labelFor="idQueueSelect"
                                    required="true"
                                />
                                <MultiComboBox
                                    id="_IDGenComboBox10"
                                    placeholder="Select Queue from Dropdown.."
                                    class="Inputs"
                                    items="{path: '/ProcessAreaSet'}"
                                    visible="false"
                                    selectionChange="onCheckBoxSelectQueue"
                                >
                                    <core:Item
                                        class="dropdown"
                                        id="_IDGenItem22"
                                        key="{Queue}"
                                        text="{Queue}"
                                    />
                                </MultiComboBox>

                                <!--  OUTBOUND  -->
                            </FlexBox>
                            

                            <FlexBox
                                id="_IDField6"
                                justifyContent="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Button
                                    id="idButtonApprove"
                                    text="Approve"
                                    type="Unstyled"
                                    press="onApprovePress"
                                    class="SubmitBtnFromVendorPage"
                                    width="auto"
                                />
                                <ToolbarSpacer
                                    id="toolspacer"
                                    width="10px"
                                />
                                <Button
                                    id="idButtonReject"
                                    text="Reject"
                                    type="Reject"
                                    press="onResetPress"
                                    class="ClearBtnFromVendorPage"
                                    width="auto"
                                />
                            </FlexBox>
                            <Label id="idEmptyRow" />
                        </VBox>
                    </ScrollContainer>

                    <ScrollContainer
                        id="pageSV2"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        class="sapUiContentPadding"
                    >
                        <Table
                            id="idRequestedData"
                            alternateRowColors="true"
                            backgroundDesign="Transparent"
                            items="{/RESOURCESSet}"
                            mode="MultiSelect"
                            class="Allslotsclasstable"
                        >
                            <headerToolbar>
                                <OverflowToolbar id="idSlotsTableHeader1">
                                    <Title
                                        id="idTableHeaderTitle1"
                                        text="Requested Data"
                                        class="Titles"
                                    />
                                    <ToolbarSpacer
                                        id="idUsersInfoToolbarSpacer"
                                    />
                                    <Button
                                        id="idBtnCreate"
                                        icon="sap-icon://add"
                                        text="Add"
                                        tooltip="Create New User"
                                        type="Success"
                                        press="onCreateUserBtnPress"
                                    />
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column id="idEmployeeId">
                                    <Title
                                        id="idtitleEmpID"
                                        text="Resource Id"
                                    />
                                </Column>
                                <Column id="idEmployeename">
                                    <Title
                                        id="idtitleEmpName"
                                        text="Resource Name"
                                    />
                                </Column>
                                <Column id="idArea">
                                    <Title
                                        id="idAreatitle"
                                        text="Area"
                                    />
                                </Column>
                                <Column id="idResoursegroup">
                                    <Title
                                        id="idResoursegrouptitle"
                                        text="Resourse group"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem
                                    id="idColumnListAllSlots"
                                    class="Requested Data"
                                >
                                    <cells>
                                        <Text
                                            id="idresourceidValue"
                                            text="{Resourceid}"
                                        />
                                        <Text
                                            id="idResourcenameValue"
                                            text="{Resourcename}"
                                        />
                                        <Text
                                            id="idAreaValue"
                                            text="{Area}"
                                        />
                                        <Text
                                            id="idResourcegroupValue"
                                            text="{Resourcegroup}"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </ScrollContainer>
                    <ScrollContainer
                        id="pageSV3"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        class="sapUiContentPadding"
                    >
                        <Table
                            id="idRequestDataTable"
                            mode="MultiSelect"
                            items="{/RESOURCESSet}"
                            alternateRowColors="true"
                            growingScrollToLoad="true"
                        >
                            <headerToolbar>
                                <OverflowToolbar id="idUsersInfoHeade">
                                    <Title
                                        id="idUsersInfoTitl"
                                        text="Users Data:"
                                    />
                                    <!-- <ToolbarSpacer
                                        id="idUsersInfoToolbarSpace"
                                    />
                                    <SearchField
                                        id="idonSearchBt"
                                        width="20%"
                                        liveChange="onSearch"
                                    >
                                        <layoutData>
                                            <OverflowToolbarLayoutData
                                                id="idToolbarLayoutDat"
                                                priority="NeverOverflow"
                                            />
                                        </layoutData>
                                    </SearchField>
<Button
                                        id="idBtnEd2"
                                        tooltip="Approve"
                                        text="Approve"
                                        type="Accept"
                                        press="onUpdateUserBtnPress"
                                    />
                                    <Button
                                        id="idBtnEdi"
                                        tooltip="Reject"
                                        text="Reject"
                                        type="Reject"
                                        press="onUpdateUserBtnPress"
                                    /> -->
                                </OverflowToolbar>
                            </headerToolbar>

                            <columns>
                                <Column
                                    id="idRDEmpIdCol"
                                    width="15%"
                                >
                                    <Title
                                        id="idRDEmpIdTitle"
                                        text="Resource Id"
                                    />
                                </Column>
                                <Column
                                    id="idRDEmpNameCol"
                                    width="20%"
                                >
                                    <Title
                                        id="idRDEmpNameTitle"
                                        text="Resource Name"
                                    />
                                </Column>
                                <Column
                                    id="idRDAreaCol"
                                    width="10%"
                                >
                                    <Title
                                        id="idRDAreaColTitle"
                                        text="Area"
                                    />
                                </Column>
                                <Column
                                    id="idRDGroupCol"
                                    width="10%"
                                >
                                    <Title
                                        id="idRDGroupTitle"
                                        text="Group"
                                    />
                                </Column>
                                <Column
                                    id="idRDResourceTypeCol"
                                    width="18%"
                                >
                                    <Title
                                        id="idRDResourceTypeTitle"
                                        text="Resource Type"
                                    />
                                </Column>
                                <Column
                                    id="idRDEmailCol"
                                    width="10%"
                                >
                                    <Title
                                        id="idRDEmailTitle"
                                        text="Email"
                                    />
                                </Column>

                                <Column
                                    id="idRDPhoneNoCol"
                                    width="15%"
                                >
                                    <Title
                                        id="idRDPhoneNoTitle"
                                        text="Phone Number"
                                    />
                                </Column>

                                <Column
                                    id="idPasswordCol1"
                                    width="13%"
                                >
                                    <Title
                                        id="idPasswordTitl1e"
                                        text="Password"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="idRDEmpIdColListItem">
                                    <cells>
                                        <Text
                                            id="idRDEmpIdValue"
                                            text="{Resourceid}"
                                        />
                                        <Text
                                            id="idRDEmpNameColValue"
                                            text="{Resourcename}"
                                        />
                                        <Text
                                            id="idRDAreaColValue"
                                            text="{Area}"
                                        />
                                        <Text
                                            id="idRDGroupColValue"
                                            text="{Resourcegroup}"
                                        />
                                        <Text
                                            id="idRDResourceTypeColValue"
                                            text="{Resourcetype}"
                                        />
                                        <Text
                                            id="idRDEmailColValue"
                                            text="{Email}"
                                        />
                                        <Text
                                            id="idRDPhoneNoColValue"
                                            text="{Phonenumber}"
                                        />

                                        <Text
                                            id="idRDPasswordColValue"
                                            text="{Password}"
                                        />

                                        <Text
                                            id="idUserQueueColValue"
                                            text="{Queue}"
                                        />

                                        <Text
                                            id="idRDExpiredDateColValue"
                                            text="{Expirydate}"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
